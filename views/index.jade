extends layout

block content
	if results
		each post, i in results
			.post
				h1
					a(href='/posts/show/#{post._id}')
						=post.title
				p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format('MM-DD-YYYY')}
				=post.body
				a.more(href='/post/show/#{post._id}') Read More
